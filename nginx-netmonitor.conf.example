# Nginx Configuration for NetMonitor SOC
# Supports both Web Dashboard (8080) and MCP HTTP API (8000)
#
# INSTALLATIE:
#   sudo cp nginx-netmonitor.conf.example /etc/nginx/sites-available/netmonitor
#   sudo ln -s /etc/nginx/sites-available/netmonitor /etc/nginx/sites-enabled/
#   sudo nginx -t && sudo systemctl reload nginx
#
# SSL CERTIFICATEN:
#   sudo certbot --nginx -d soc.example.com

# Upstream voor Web Dashboard (Flask/eventlet/SocketIO)
upstream netmonitor_dashboard {
    server 127.0.0.1:8080 fail_timeout=0;
    keepalive 32;
}

# Upstream voor MCP HTTP API (FastAPI/Uvicorn)
upstream netmonitor_mcp_api {
    server 127.0.0.1:8000 fail_timeout=0;
    keepalive 32;
}

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name soc.example.com;  # WIJZIG NAAR JE DOMEIN

    # Let's Encrypt ACME challenge
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all HTTP to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS Server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name soc.example.com;  # WIJZIG NAAR JE DOMEIN

    # SSL Certificaten
    ssl_certificate /etc/letsencrypt/live/soc.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/soc.example.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/soc.example.com/chain.pem;
    ssl_stapling on;
    ssl_stapling_verify on;

    # SSL Security Settings (Mozilla Intermediate)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;

    # HSTS
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Client body size
    client_max_body_size 10M;

    # Timeouts
    proxy_connect_timeout 300s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;

    # Logging
    access_log /var/log/nginx/netmonitor_access.log;
    error_log /var/log/nginx/netmonitor_error.log;

    # ==================== MCP HTTP API (POORT 8000) ====================
    # FastAPI/Uvicorn MCP server met token authenticatie
    # OpenAPI docs: /mcp/docs (Swagger UI) en /mcp/redoc (ReDoc)

    # Exact match voor /mcp (zonder trailing slash) - redirect naar /mcp/
    location = /mcp {
        rewrite ^ /mcp/ last;
    }

    # Prefix match voor /mcp/* (MCP Streamable HTTP en andere endpoints)
    location /mcp/ {
        # CORS Headers voor MCP API
        add_header Access-Control-Allow-Origin "*" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type, Accept, X-Requested-With, X-API-Key" always;
        add_header Access-Control-Max-Age 3600 always;

        # Handle preflight
        if ($request_method = 'OPTIONS') {
            return 204;
        }

        # Rewrite /mcp/xxx naar /xxx voor MCP API
        rewrite ^/mcp/(.*) /$1 break;

        proxy_pass http://netmonitor_mcp_api;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Preserve Authorization header en X-API-Key voor token auth
        proxy_set_header Authorization $http_authorization;
        proxy_set_header X-API-Key $http_x_api_key;
        proxy_pass_header Authorization;

        # SSE streaming settings
        proxy_buffering off;
        proxy_redirect off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 86400s;
    }

    # ==================== SENSOR API ENDPOINTS (POORT 8080) ====================
    # Flask dashboard sensor endpoints met sensor token authenticatie

    location /api/sensors/ {
        proxy_pass http://netmonitor_dashboard;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # Preserve Authorization header
        proxy_set_header Authorization $http_authorization;
        proxy_pass_header Authorization;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_buffering off;
        proxy_redirect off;
    }

    # ==================== WEB DASHBOARD (POORT 8080) ====================
    # Flask dashboard met Flask-Login authenticatie

    # Kiosk Mode - Public access (GEEN authenticatie vereist)
    location ~ ^/(kiosk|api/kiosk/) {
        proxy_pass http://netmonitor_dashboard;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_buffering off;
        proxy_redirect off;
    }

    # Login endpoints - GEEN authenticatie vereist
    location ~ ^/(login|api/auth/) {
        proxy_pass http://netmonitor_dashboard;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Cookie passthrough
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;

        proxy_buffering off;
        proxy_redirect off;
    }

    # Dashboard root - Flask-Login authenticatie
    location / {
        proxy_pass http://netmonitor_dashboard;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Cookie passthrough
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_buffering off;
        proxy_redirect off;
    }

    # Dashboard API endpoints - Flask-Login authenticatie
    location /api/ {
        proxy_pass http://netmonitor_dashboard;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Cookie passthrough
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;

        proxy_buffering off;
        proxy_redirect off;
    }

    # WebSocket endpoint - Flask-Login authenticatie
    location /socket.io/ {
        proxy_pass http://netmonitor_dashboard;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Cookie passthrough
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;

        # WebSocket specific
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffering off;

        # Longer timeout voor persistent connections
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # Static files
    location /static/ {
        alias /opt/netmonitor/web/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}
